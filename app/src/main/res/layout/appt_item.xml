<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/appt_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약속이름"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_below="@id/appt_name_textview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/appt_list_item_edge">

            <TextView
                android:id="@+id/appt_place_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="약속 장소 :"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/appt_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 시간 :"
                android:textSize="15dp"
                android:layout_below="@id/appt_place_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appt_group_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 유형 :"
                android:textSize="15dp"
                android:layout_below="@id/appt_time_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appt_member_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여 인원 :"
                android:textSize="15dp"
                android:layout_below="@id/appt_group_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>