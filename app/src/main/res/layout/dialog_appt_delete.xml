<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryMoreDark">

    <TextView
        android:id="@+id/delete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약속을 정말 삭제하시겠습니까?"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/delete_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/appt_delete_cancel"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/button_cancel"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:text="@string/cancel"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/appt_delete_ok"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/button_search"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/appt_delete_cancel"
            android:text="@string/ok"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>