<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_actionbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/actionbar_gradation">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_font"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_profile_load"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_person_24sp_white"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ListView
        android:layout_below="@+id/rl_main_actionbar"
        android:id="@+id/ddayListView"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:divider="#ffffff"
        android:dividerHeight="10dp" />

    <GridLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginBottom="8dp"
        >

        <Button
            android:layout_columnWeight="0.3"
            android:id="@+id/viewapptButton"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_rounding_btn"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_people_black_24dp"
            android:drawableStart="@drawable/ic_people_black_24dp"
            android:text="약속보기"
            android:paddingLeft="4dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:layout_columnWeight="0.3"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addfriendButton"
            android:text="친구추가"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:drawableStart="@drawable/ic_person_add_black_24dp"
            android:background="@drawable/main_rounding_btn"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:layout_columnWeight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:id="@+id/makeapptButton"
            android:text="약속생성"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:drawableLeft="@drawable/ic_event_black_24dp"
            android:drawableStart="@drawable/ic_event_black_24dp"
            android:background="@drawable/main_rounding_btn"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />

    </GridLayout>




</RelativeLayout>