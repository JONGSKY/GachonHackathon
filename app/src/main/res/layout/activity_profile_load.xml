<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    //배경화면과 흰색화면 나누기 위해서 사용

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        //프로필 배경 화면

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            //뒤로 가기 버튼
            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_arrow_left"
                tools:ignore="ContentDescription" />


            <!--상태메세지-->
            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text=""
                android:textSize="25dp" />

            <!--자동차 유무 버튼-->
            <!--<RadioButton
                android:id="@+id/radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>-->

            <!--자동차 이미지-->
            <!--  <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/radiobutton"
                android:background="@drawable/ic_car" />-->

            <ImageButton
                android:id="@+id/ib_edit_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/baseline_add_comment_black_24" />

            <ImageButton
                android:id="@+id/ib_edit_nickname"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/ib_edit_status"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_person_black_24dp" />

        </RelativeLayout>

        <!--아래의 흰색 화면-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white">

        </RelativeLayout>

    </LinearLayout>

    <!--프로필 사진-->

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_profile_picture"
        android:scaleType="centerCrop"
        />


    <ImageButton
        android:id="@+id/ib_edit_userImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user"
        android:layout_alignRight="@+id/iv_user"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="24dp"
        android:layout_below="@+id/iv_user"
        />
    <!--주소변경-->

    <ImageButton
        android:id="@+id/ib_map"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_map"/>


</RelativeLayout>